<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 设置普通指示器 -->
    <com.donkingliang.banner.CustomBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        app:indicatorInterval="5dp"
        app:indicatorSelectRes="@drawable/lunboxz"
        app:indicatorStyle="ORDINARY"
        app:indicatorUnSelectRes="@drawable/lunbo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:text="@string/zhuanlankecheng"
        android:textColor="@color/D"
        android:textSize="@dimen/T1"
        android:textStyle="bold" />

</LinearLayout>