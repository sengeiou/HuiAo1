<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/header"
        layout="@layout/header_layout01" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="@string/xingqu"
        android:textColor="@color/B"
        android:textSize="@dimen/T2" />


    <TextView
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/anniu_next"
        android:enabled="false"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="15dp"
        android:text="@string/wancheng"
        android:textColor="@color/E"
        android:textSize="@dimen/T1" />


    <GridView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next_button"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:horizontalSpacing="20dp"
        android:numColumns="4"
        android:scrollbars="none" />


</RelativeLayout>