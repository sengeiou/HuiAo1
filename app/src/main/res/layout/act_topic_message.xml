<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">


    <include
        android:id="@id/header"
        layout="@layout/header_layout01" />


    <com.myp.huiao.widget.ScrollViewExt
        android:id="@id/scoll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:background="@color/white"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">


                <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                    android:id="@+id/person_img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/defalt_person"
                    app:shape_mode="circle" />


                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@+id/person_img"
                    android:text="@string/app_name"
                    android:textColor="@color/L"
                    android:textSize="@dimen/T5" />


                <TextView
                    android:id="@+id/add_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_red_borld"
                    android:paddingBottom="5dp"
                    android:paddingEnd="11dp"
                    android:paddingStart="11dp"
                    android:paddingTop="5dp"
                    android:text="@string/jiaguanzhu"
                    android:textColor="@color/K"
                    android:textSize="@dimen/T4" />


            </RelativeLayout>


            <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                android:id="@+id/toppic_img"
                android:layout_width="match_parent"
                android:layout_height="332dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/zhanwei1"
                app:round_radius="6dp"
                app:shape_mode="round_rect" />


            <TextView
                android:id="@+id/topic_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:text="@string/title_lizi"
                android:textColor="@color/D"
                android:textSize="@dimen/T10" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="17dp"
                android:gravity="bottom"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/topic_type_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" />


                <TextView
                    android:id="@+id/topic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textColor="@color/G"
                    android:textSize="@dimen/T7" />

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/xuxian" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/dianzan_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dianzan"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/dianzan1" />

                    <TextView
                        android:id="@+id/dianzan_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:text="@string/num"
                        android:textColor="@color/G"
                        android:textSize="@dimen/T4" />

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#e5e5e5" />

                <LinearLayout
                    android:id="@+id/pinlun_num_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/huifu"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/huifu" />

                    <TextView
                        android:id="@+id/huifu_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:text="@string/num"
                        android:textColor="@color/G"
                        android:textSize="@dimen/T4" />

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f5f5f5" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:text="@string/quanbupinlun"
                android:textColor="@color/D"
                android:textSize="@dimen/T1"
                android:textStyle="bold" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="53dp" />


        </LinearLayout>
    </com.myp.huiao.widget.ScrollViewExt>

    <LinearLayout
        android:id="@id/buttom_layout"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@drawable/yinying" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <LinearLayout
                android:id="@+id/pinlun_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:background="@drawable/edit_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/pinglun" />


                <TextView
                    android:id="@+id/pinlun_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:hint="@string/fabiaopinlun"
                    android:maxLines="1"
                    android:textColor="@color/D"
                    android:textColorHint="@color/G"
                    android:textSize="@dimen/T3" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>